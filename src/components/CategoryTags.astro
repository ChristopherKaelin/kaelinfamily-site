---
// src/components/CategoryTags.astro
interface Props {
  categories: Array<{title: string, slug: string}>;
  variant?: 'default' | 'compact';
}

const { categories = [], variant = 'default' } = Astro.props;
---

{categories.length > 0 && (
  <div class={`flex flex-wrap gap-1 ${variant === 'compact' ? 'gap-0.5' : 'gap-1'}`}>
    {categories.map((category) => (
      <a href={`/category/${category.slug}/`} class="category-tag">
        {category.title}
      </a>
    ))}
  </div>
)}

