---
// src/components/PortfolioCard.astro
import OptimizedImage from './OptimizedImage.astro';

export interface Props {
  title: string;
  description: string;
  technologies: string[];
  imageUrl?: string | null;
  liveUrl?: string | null;
  githubUrl?: string | null; 
  slug: string;
  featured?: boolean;
}

const { 
  title, 
  description, 
  technologies, 
  imageUrl, 
  liveUrl, 
  githubUrl, 
  slug,
  featured = false 
} = Astro.props;
---

<article class={`project-card flex flex-col h-full justify-self-center ${featured ? 'featured' : ''}`}>
  <div class="relative w-full h-50 overflow-hidden" style="background-color: var(--color-bg-blue);">
     {imageUrl ? (
        <OptimizedImage 
          src={imageUrl} 
          alt={`${title} screenshot`}
          width={400} 
          height={250}
          loading="lazy" 
          sizes="(max-width: 768px) 100vw, 400px"
          class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
        />
        ) : (
        <div class="image-placeholder w-full h-full flex items-center justify-content text-5xl">
          <span>ðŸ“‹</span>
        </div>
      )}
  </div>
  
  <div class="p-6 flex flex-col flex-grow">
    <h3 class="project-title m-0 mb-4 text-lg leading-tight">
      <a href={`/portfolio/${slug}`}>{title}</a>
    </h3>
    
    <p class="text-gray-600 leading-relaxed mb-6 flex-grow">{description}</p>
    
    <div class="flex flex-wrap gap-2 mb-6">
      {technologies && technologies.map((tech) => (
        <span class="tech-tag px-3 py-1 rounded text-sm">{tech}</span>
      ))}
    </div>
    
    <div class="flex flex-wrap gap-2 mt-auto sm:flex-col sm:gap-2">
      <a href={`/portfolio/${slug}`} class="btn btn-primary inline-flex items-center gap-2 px-4 py-2 rounded text-sm cursor-pointer sm:justify-center sm:text-center">
        Learn More
      </a>
      
      {liveUrl && (
        <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="btn btn-secondary inline-flex items-center gap-2 px-4 py-2 rounded text-sm cursor-pointer sm:justify-center sm:text-center">
          <span>View Live</span>
          <span class="external-icon text-sm">â†—</span>
        </a>
      )}
      
      {githubUrl  && (
        <a href={githubUrl } target="_blank" rel="noopener noreferrer" class="btn btn-outline inline-flex items-center gap-2 px-4 py-2 rounded text-sm cursor-pointer sm:justify-center sm:text-center">
          <span>View Code</span>
          <span class="external-icon text-sm">â†—</span>
        </a>
      )}
    </div>
  </div>
</article>
