---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../../consts';
import { sanityClient } from '../../../sanity.config.js';

export async function getStaticPaths() {
  const portfolioItems: any[] = await sanityClient.fetch(`
    *[_type == "portfolio" && defined(publishedAt) && isPublic == true] {
      "slug": slug.current,
      title,
      description,
      "technologies": technologies[]->title,
      liveUrl,
      githubUrl,
      featured,
      overview,
      challenges,
      technicalDetails
    }
  `);
  
  return portfolioItems.map((item) => ({
    params: { slug: item.slug },
    props: item,
  }));
}


const { title, description, technologies, liveUrl, githubUrl, fullDescription, challenges, learnings } = Astro.props;
---

<BaseLayout title={`${title} - ${SITE_TITLE}`} description={description}>
  <article class="project-detail">
    <header class="project-header">
      <h1>{title}</h1>
      <p class="project-summary">{description}</p>
      
      <div class="project-meta">
        <div class="technologies">
          {technologies && technologies.map((tech: string) => (
            <span class="tech-tag">{tech}</span>
          ))}
        </div>
        
        <div class="project-links">
          {liveUrl && (
            <a href={liveUrl} target="_blank" rel="noopener" class="btn btn-primary">
              View Live Site ↗
            </a>
          )}
          {githubUrl && (
            <a href={githubUrl} target="_blank" rel="noopener" class="btn btn-outline">
              View Code ↗
            </a>
          )}
        </div>
      </div>
    </header>

    <div class="project-content">
      <section>
        <h2>About This Project</h2>
        <p>{fullDescription}</p>
      </section>

      <section>
        <h2>Challenges</h2>
        <p>{challenges}</p>
      </section>

      <section>
        <h2>What I Learned</h2>
        <p>{learnings}</p>
      </section>
    </div>

    <footer class="project-footer">
      <a href="/projects" class="back-link">← Back to Projects</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .project-detail {
    max-width: 800px;
    margin: 0 auto;
  }

  .project-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border);
  }

  .project-summary {
    font-size: var(--font-size-large);
    color: var(--color-muted);
    margin: var(--spacing-base) 0 var(--spacing-xl);
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-large);
    align-items: center;
  }

  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-small);
    justify-content: center;
  }

  .tech-tag {
    background-color: var(--color-success-light);
    color: var(--color-primary);
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius-base);
    font-size: var(--font-size-small);
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: var(--spacing-base);
    flex-wrap: wrap;
    justify-content: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius-base);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition-fast);
    border: var(--border-width) solid;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .btn-primary:hover {
    background-color: var(--color-primary-light);
    border-color: var(--color-primary-light);
  }

  .btn-outline {
    background-color: transparent;
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  .btn-outline:hover {
    background-color: var(--color-accent);
    color: white;
  }

  .project-content {
    line-height: 1.7;
    margin-bottom: var(--spacing-xl);
  }

  .project-content section {
    margin-bottom: var(--spacing-xl);
  }

  .project-content h2 {
    margin-bottom: var(--spacing-base);
  }

  .project-footer {
    text-align: center;
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 500;
  }

  .back-link:hover {
    color: var(--color-primary-light);
    text-decoration: underline;
  }

  .btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }

  .btn-primary:hover {
    background-color: var(--color-primary-light);
    border-color: var(--color-primary-light);
  }

  .btn-outline:hover {
    background-color: var(--color-accent);
    color: white;
    transform: translateY(-1px);
  }

  @media (max-width: 760px) {
    .project-meta {
      gap: var(--spacing-base);
    }
    
    .project-links {
      flex-direction: column;
      width: 100%;
    }
    
    .btn {
      justify-content: center;
    }
  }
</style>